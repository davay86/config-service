def pomLocation = "configuration-api-parent"

node {
  def img

  stage('Checkout') {
    checkout scm
  }

  stage('Build and Release'){
     def pom = readMavenPom file: pomLocation+'/pom.xml'
     version = pom.version
     releaseVersion = version.minus("-SNAPSHOT")

    sh "mvn -B -V -U -e -f " + pomLocation + "/pom.xml release:clean release:prepare -P docker-publish -Ddocker.release.version="+releaseVersion
  }

}